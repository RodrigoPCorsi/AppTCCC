<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Act_CadastroPessoa" >

    <EditText
        android:id="@+id/cadPessoa_txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadPessoa_txtEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadPessoa_txtNome"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="EndereÃ§o"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadPessoa_txtCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadPessoa_txtEndereco"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="CPF"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadPessoa_txtRg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadPessoa_txtCpf"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="RG"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadPessoa_txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadPessoa_txtRg"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cadPessoa_txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cadPessoa_txtLogin"
        android:layout_alignRight="@+id/cadPessoa_txtLogin"
        android:layout_below="@+id/cadPessoa_txtLogin"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/cadPessoa_txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadPessoa_txtSenha"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/cadPessoa_btCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cadPessoa_txtSenha"
        android:layout_below="@+id/cadPessoa_txtEmail"
        android:layout_marginTop="46dp"
        android:text="Cadastrar" />

</RelativeLayout>